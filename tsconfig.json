{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "declaration": true,
      "outDir": "dist",
      "rootDir": "src",
      "resolveJsonModule": true,
      "jsx": "react-jsx",
      "paths": {
        "@xmcp/*": ["./.xmcp/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", ".xmcp"]
  }